# Imtiaz Trading Platform - Backend Production Environment Configuration

# Application Settings
APP_NAME=Imtiaz Trading Platform
APP_VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000

# Database (Use PostgreSQL in production)
DATABASE_URL=postgresql://user:password@localhost:5432/imtiaz_trading

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (comma-separated origins)
CORS_ORIGINS=https://imtiaztrading.com,https://www.imtiaztrading.com,https://app.imtiaztrading.com

# MetaTrader Integration (Future feature)
MT_SERVER=your-mt-server.com
MT_LOGIN=your-mt-login
MT_PASSWORD=your-mt-password

# Email Settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@imtiaztrading.com

# Redis (for caching - optional)
REDIS_URL=redis://localhost:6379/0

# AWS S3 (for file storage - optional)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=imtiaz-trading-files
AWS_REGION=us-east-1

# Sentry (error tracking - optional)
SENTRY_DSN=your-sentry-dsn-here
