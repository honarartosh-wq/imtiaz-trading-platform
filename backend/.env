# Local Development Configuration

# Database - PostgreSQL (local)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/imtiaz_trading

# Security
SECRET_KEY=dev-secret-key-for-local-testing-only-change-in-production

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://code-polish-15.preview.emergentagent.com,https://emergentagent.com

# Application
DEBUG=true
APP_NAME=Imtiaz Trading Platform
APP_VERSION=1.0.0
ENVIRONMENT=development

# Admin User
ADMIN_EMAIL=admin@imtiaz.com
ADMIN_PASSWORD=Admin@123456

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Redis (optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Email (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@imtiaz.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
